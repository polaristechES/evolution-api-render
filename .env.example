# Evolution API - Variables de Entorno
# Copia este archivo a .env y configura tus valores

# ===== AUTENTICACIÓN =====
AUTHENTICATION_API_KEY=tu-clave-secreta-aqui

# ===== SERVIDOR =====
SERVER_URL=https://tu-servicio.onrender.com

# ===== LOGS =====
LOG_LEVEL=ERROR,WARN,DEBUG,INFO,LOG,VERBOSE
LOG_COLOR=true
LOG_BAILEYS=error

# ===== ALMACENAMIENTO TEMPORAL =====
STORE_MESSAGES=true
STORE_MESSAGE_UP=true
STORE_CONTACTS=true
STORE_CHATS=true

# ===== INSTANCIAS =====
# false = nunca eliminar instancias desconectadas
# número = minutos antes de eliminar
DEL_INSTANCE=false
DEL_TEMP_INSTANCES=false

# ===== CORS =====
CORS_ORIGIN=*
CORS_METHODS=POST,GET,PUT,DELETE
CORS_CREDENTIALS=true

# ===== WEBSOCKET (OPCIONAL) =====
WEBSOCKET_ENABLED=false
WEBSOCKET_GLOBAL_EVENTS=false

# ===== BASE DE DATOS (OPCIONAL) =====
# MongoDB para almacenamiento persistente
DATABASE_ENABLED=false
# DATABASE_CONNECTION_URI=mongodb://username:password@host:port/database
# DATABASE_CONNECTION_DB_PREFIX_NAME=evolution

# ===== REDIS (OPCIONAL) =====
# Para caché y sesiones
CACHE_REDIS_ENABLED=false
# CACHE_REDIS_URI=redis://redis:6379
# CACHE_REDIS_PREFIX_KEY=evolution
# CACHE_REDIS_TTL=604800

# ===== RABBITMQ (OPCIONAL) =====
RABBITMQ_ENABLED=false

# ===== WEBHOOK (OPCIONAL) =====
WEBHOOK_GLOBAL_ENABLED=false
# WEBHOOK_GLOBAL_URL=https://tu-webhook.com/events

# ===== QR CODE =====
QRCODE_LIMIT=30
QRCODE_COLOR=#198754

# ===== SESIÓN =====
CONFIG_SESSION_PHONE_CLIENT=Evolution API
CONFIG_SESSION_PHONE_NAME=Chrome
